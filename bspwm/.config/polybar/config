[global/wm]
wm-restack = bspwm

[colors]
;background = ${xrdb:color0:#222}
background = #181b20
background-alt = #444
;foreground = ${xrdb:color7:#222}
foreground = #dfdfdf
foreground-alt = #555
primary = #6d6137
secondary = #6b4a49
alert = #744b40

[bar/main]
monitor = ${env:MONITOR:DisplayPort-1}
width = 100%
height = 36
;offset-x = 1%
;offset-y = 1%
radius = 6.0
fixed-center = false

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 3
line-color = #f00

border-size = 4
border-color = #00000000

padding-left = 0
padding-right = 2

module-margin-left = 1
module-margin-right = 2

font-0 = fixed:pixelsize=10;1
font-1 = FontAwesome:pixelsize=12;1
font-2 = siji:pixelsize=12;1

modules-left = bspwm
#modules-center = date
modules-right = gmail date

#tray-position = right
#tray-padding = 2

cursor-click = pointer
cursor-scroll = ns-resize

[bar/left]
monitor = ${env:MONITOR:DisplayPort-0}
width = 100%
height = 36

radius = 6.0
fixed-center = false

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 3
line-color = #f00

border-size = 4
border-color = #00000000

padding-left = 0
padding-right = 2

module-margin-left = 1
module-margin-right = 2

font-0 = fixed:pixelsize=10;1
font-1 = FontAwesome:pixelsize=12;1
font-2 = siji:pixelsize=12;1

modules-left = bspwm
#modules-center = date
modules-right = gmail date

#tray-position = right
