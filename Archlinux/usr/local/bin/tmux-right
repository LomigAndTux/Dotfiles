#!/usr/bin/env bash


function nordvpn-status(){
    ip=$(nordvpn status| grep "IP:" | sed -e 's/Your new IP: //g')
    if [[ $ip == "" ]]
    then
        echo "DÃ©connectÃ©"
    else
        town=$(nordvpn status | grep "City" | sed -e 's/City: //g')
        echo $town" : "$ip
    fi
}



vpn=`nordvpn-status`
update=`cat /var/cache/updown`

echo "$vpn > $update"
